{
    "template": "#{{CHANGELOG}}",
    "categories": [
        {
            "title": "## 🚀 Features",
            "labels": [
                "feat"
            ]
        },
        {
            "title": "## 🐛 Fixes",
            "labels": [
                "fix"
            ]
        },
        {
            "title": "## ⚡️ Performance",
            "labels": [
                "perf"
            ]
        },
        {
            "title": "## 🧪 Tests",
            "labels": [
                "test"
            ]
        },
        {
            "title": "## 📝 Docs",
            "labels": [
                "docs"
            ]
        },
        {
            "title": "## 🤖 CI",
            "labels": [
                "automated-issue",
                "ci"
            ]
        },
        {
            "title": "## Other",
            "labels": []
        }
    ],
    "label_extractor": [
        {
            "pattern": "^(build|chore|ci|docs|feat|fix|perf|refactor|revert|style|test){1}(\\([\\w\\-\\.]+\\))?(!)?: ([\\w ])+([\\s\\S]*)",
            "target": "$1"
        }
    ]
}
